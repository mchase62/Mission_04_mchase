@model GradesModel;

<h2>Grade Calculator</h2>

<form method="post">
    <label>Assignments:</label>
    <input type="number" asp-for="Assignments" id="txtAssignments" /><br />
    <label>Group Project:</label>
    <input type="number" asp-for="GroupProject" id="txtGroupProject" /><br />
    <label>Quizzes:</label>
    <input type="number" asp-for="Quizzes" id="txtQuizzes" /><br />
    <label>Midterm Exam:</label>
    <input type="number" asp-for="MidtermExam" id="txtMidtermExam" /><br />
    <label>Final Exam:</label>
    <input type="number" asp-for="FinalExam" id="txtFinalExam" /><br />
    <label>INTEX:</label>
    <input type="number" asp-for="Intex" id="txtIntex" /><br />
    <input id="btnSend" type="submit" value="Submit" />

    <div asp-validation-summary="All"></div> 
</form>


<script src="~/js/grades.js"></script>
